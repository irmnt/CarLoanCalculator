                        <option value="loanTermA_12m">12 months</option>
                        <option value="loanTermA_36m">36 months</option>
                        <option value="loanTermA_60m">60 months</option>
                        <option value="loanTermA_120m">120 months</option>
                    </select>
                </div>

                <!-- Loan Start Date -->
                <div class="form-row">
                    <label class="label">Loan Start Date:</label>
                    <input type="text" asp-for="LoanStartDatePlanA" id="loanStartDatePlanA" placeholder="mm/yyyy">
                </div>

                <!-- Interest Rate -->
                <div class="form-row">
                    <label class="label">Annual Interest Rate:</label>
