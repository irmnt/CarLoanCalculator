@model CarLoanCalculator.Models.LoanViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Loan Calculator</h1>
</div>
<form asp-action="Confirm" method="post">
    <div class="container">
        <!-- Plans Container -->
        <div class="plans-container">

            <!-- Plan A -->
            <div class="column">
                <!-- Radio Button for Plan A -->
                <label class="radio-container">
                    <input type="radio" id="planA" name="SelectedPlan" value="A" checked>
                    <span class="checkmark">Plan A</span>
                </label>

                <!-- Total Payment Amount -->
                <div class="form-row">
                    <label for="totalPaymentAmountPlanA" class="label">Total Payment Amount:</label>
                    <span asp-for="TotalPaymentAmountPlanA" id="totalPaymentAmountPlanA"></span>
                </div>

                <!-- Price of Vehicle -->
                <div class="form-row">
                    <label for="vehiclePricePlanA" class="label">Price of Vehicle: </label>
                    <input type="text" asp-for="VehiclePricePlanA" id="vehiclePricePlanA" placeholder="0" onblur="updateAllItems('A')">
                </div>

                <!-- Down Payment -->
                <div class="form-row">
                    <label class="label">Down Payment:</label>
                    <input type="text" asp-for="DownPaymentPlanA" id="downPaymentPlanA" placeholder="0" onblur="updateAllItems('A')">
                </div>

                <div class="border-line"></div>

                <!-- insurance Type -->
                <div class="form-row">
                    <label class="label">Insurance Type:</label>
                    <select name="insuranceTypePlanA" asp-for="InsuranceTypePlanA" id="insuranceTypePlanA" oninput="updateAllItems('A')">
                        <option value="select option"></option>
                        <option value="insuranceA_1yr">1 year guarantee</option>
                        <option value="insuranceA_3yrs">3 years guarantee</option>
                        <option value="insuranceA_5yrs">5 years guarantee</option>
                        <option value="insuranceA_10yrs">10 years guarantee</option>
                    </select>
                </div>

                <!-- insurance Price -->
                <div class="form-row">
                    <label class="label">Insurance Price:</label>
                    <span id="insurancePricePlanA"></span>
                </div>

                <!-- Other Fees -->
                <div class="form-row">
                    <label class="label">Other Fees:</label>
                    $  <input type="text" asp-for="OtherFeesPlanA" id="otherFeesPlanA" placeholder="0" onblur="updateAllItems('A')">
                </div>

                <!-- Tax Rate -->
                <div class="form-row">
                    <label class="label">Tax Rate:</label>
                    <input type="text" asp-for="TaxRatePlanA" id="taxRatePlanA" placeholder="0" onblur="updateAllItems('A')">  %
                </div>

                <!-- Taxes -->
                <div class="form-row">
                    <label class="label">Taxes:</label>
                    <span id="taxesPlanA"></span>
                </div>

                <!-- Loan Term -->
